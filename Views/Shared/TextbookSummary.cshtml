@model Textbooks


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h5>@Model.Title</h5>
        <h4>
            <span class="badge badge-pill badge-secondary" style="float:right">
                <medium>@Model.Price.ToString("c")</medium>
            </span>
        </h4>
    </div>
    <form id="@Model.TextbookId" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="TextbookId" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-2">
            @Model.Isbn
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                Add to Cart
            </button>
        </span>
    </form>
</div>